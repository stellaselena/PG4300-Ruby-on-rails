<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="form-group">
      <div class="col-md-8">
        <%= f.email_field :email, class: "form-control", placeholder: "email" %><br />
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-8">
        <%= f.text_field :username, class: "form-control", placeholder: "username" %> <br />
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-8">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "email" %> <br />
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-8">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "email" %> <br />
      </div>
    </div>



  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
